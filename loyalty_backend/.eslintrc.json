{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "quotes": 0,
    "no-underscore-dangle": 0,
    "no-console": "off",
    "camelcase": 0,
    "prefer-destructuring": 0,
    "no-await-in-loop": 0,
    "no-plusplus": 0,
    "no-lonely-if": 0,
    "dot-notation": 0,
    "no-unused-vars": 1,
    "no-param-reassign": 0,
    "prefer-template": 0,
    "no-shadow": 0,
    "no-var": 0,
    "no-use-before-define": 0,
    "vars-on-top": 0,
    "no-loop-func": 0,
    "default-case": 0,
    "no-else-return": 0,
    "no-continue": 0,
    // "no-case-declarations": 0,
    "no-restricted-globals": 0,
    "no-restricted-syntax": 0,
    "guard-for-in": 0,
    "consistent-return": 0,
    "no-buffer-constructor": 0,
    "prefer-promise-reject-errors": 0,
    "no-useless-escape": 0,
    "new-cap": 0,
    "array-callback-return": 0,
    "no-return-assign": 0,
    "no-async-promise-executor": 0,
    "no-unused-expressions": 0, // "no-unused-expressions" used in /controllers/contact.js
    "radix": 0,
    "import/order" : 0
  }
}
